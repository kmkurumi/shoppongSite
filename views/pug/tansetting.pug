	// 跳出視窗內容 ，id=data-bs-target
	.modal.fade.deliveryFee
		.modal-dialog.modal-dialog-centered
			.modal-content.bg-light.modal-content
				// Header
				.modal-header.text-center
					h3 運費
					button.btn-close(type='button' data-bs-dismiss='modal')
				// Body
				.modal-body
					// 
					form(action='#')
						h5
							| 運費NT 
							span 60(打勾變成0 或修改)
						// 會變
						.form-group.mb-3
							input.remember(type='checkbox')
							|  我願意負擔運費
						// 送出按鈕
						button.btn.btn-primary.ms-auto(type='button') 確認
				// Footer
				.modal-footer
					.singup
