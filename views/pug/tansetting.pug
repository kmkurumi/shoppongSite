	// 基本資訊
	.container-md.p-5.mt-5.bg-light.tansetting
		form.ps-5(action='')
			.row.mb-3
				h1
					strong 基本資訊
				hr
			.row.mb-3
				.col-sm-8
					label(for='phone') 商品名稱
					input#phone.form-control(type='tel' placeholder='商品名稱')
			.row.mb-3
				.col-sm-8
					label.form-label(for='formFile') 上傳商品圖
					input#formFile.form-control(type='file')
			.row.mb-3
				.col-sm-8
					select.form-select.mb-3(aria-label='.form-select-lg example')
						option(selected='') 商品種類
						option(value='1') 食物
						option(value='2') 用品
						option(value='3') 飲料
			.row.mb-3
				.col-sm-8
					label(for='brand') 品牌
					input#brand.form-control(type='text' "='')
			.row.mb-3
				.col-sm-8
					label(for='name') 產地
					input#name.form-control(type='text')
			.row.mb-3
				.col-sm-8
					label.form-label(for='exampleFormControlTextarea1') 商品簡介
					textarea#exampleFormControlTextarea1.form-control(rows='7')
	// ---------------------------------------------------------------------
	// 銷售資訊
	.container-md.p-5.mt-5.bg-light.tansetting
